<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Trump Watch</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="/saved">Saved Articles</a></li>
      <li><a class="btn btn-danger scrape-new">NY TIMES ARTICLES!</a></li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Trump Watch</h1>
    <p>New York Times Edition</p>
  </div>
</div>

<div class="container-fluid article-container">

  {{#if articles}}
    {{#each articles}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>
          <a class="article-link" target="_blank" href="{{this.url}}">{{this.headline}}</a>
          {{#if this.isSaved}}
            <a class="btn btn-info notes" data-id={{this._id}}>Article Notes</a>        
            <a class="btn btn-danger delete" data-id={{this._id}}>Delete from Saved</a>
          {{else}}
            <a class="btn btn-success save" data-id={{this._id}}>Save Article</a>
          {{/if}}
        </h4>
      </div>
      <div class="panel-body">
        "{{this.summary}}"
      </div>
    </div> 
    {{/each}}
  {{else}}
    <div class='alert alert-warning text-center'>
      <h4>There are no unsaved articles.  Please press scrape"</h4>
    </div> 
  {{/if}}
</div>

<footer class="footer">
  <div class="container">
    <p>Trump Watch - NYT Scraper</p>
  </div>
</footer>

